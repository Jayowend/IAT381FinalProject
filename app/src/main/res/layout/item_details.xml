<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    >

    <TextView
        android:text="Name of Item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/itemName"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textSize="48px"
        android:textColor="#000000"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"/>


    <TextView
        android:text="Expiration Date"
        android:textStyle="italic"
        android:textSize="32px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/expirationDate"
        android:layout_below="@+id/itemName"
        android:layout_alignStart="@+id/itemName"
        android:layout_marginTop="0dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/photo_placeholder"
        android:id="@+id/imageOfItem"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/expirationDate"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="back"
        android:layout_width="350px"
        android:layout_height="40dp"
        android:onClick="backButton"
        android:id="@+id/back_button"
        android:layout_marginTop="30dp"
        android:textColor="#FFFFFF"
        android:background="#7C9BB2"
        android:layout_below="@+id/imageOfItem"
        android:layout_alignStart="@+id/itemName" />


    <Button
        android:text="Delete"
        android:layout_width="350px"
        android:layout_height="40dp"
        android:id="@+id/delete_button"
        android:textColor="#FFFFFF"
        android:onClick="delete"
        android:background="#85C9E8"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/imageOfItem"
        android:layout_marginLeft="5px"
        android:layout_toEndOf="@+id/back_button" />


</RelativeLayout>