<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.team5.iat381finalproject.MainActivity"
    android:background="#FFFFFF">


    <TextView
        android:text="F r e s h i"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textSize="125px"
        android:textColor="#70C6E0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_marginTop="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="200px"
        android:layout_height="200px"
        app:srcCompat="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/imageView" />

    <Button
        android:text="Inventory"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:id="@+id/list_Button"
        android:background="#9AD5E5"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:onClick="viewList"
        android:textSize="60px"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/addItem_Button"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Add Item"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:id="@+id/addItem_Button"
        android:background="#B0E0E8"
        android:textColor="#FFFFFF"
        android:textSize="60px"
        android:textStyle="bold"
        android:onClick="addItem"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Food Suggestions"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:id="@+id/suggestion_Button"
        android:background="#86CDE2"
        android:textColor="#FFFFFF"
        android:onClick="buttonSuggestions"
        android:textSize="60px"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/list_Button"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Settings"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:id="@+id/settingsButton"
        android:background="#75C8E1"
        android:textColor="#FFFFFF"
        android:onClick="settings"
        android:textSize="60px"
        android:textStyle="bold"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/suggestion_Button"
        android:layout_alignParentStart="true" />


</RelativeLayout>
